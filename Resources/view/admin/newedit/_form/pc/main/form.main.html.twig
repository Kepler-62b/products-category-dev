{% trans_default_domain 'admin.products.category' %}

<div class="d-flex gap-2">
	
	<div class="d-flex flex-column gap-2 w-50">
		
		
		<div class="card w-100 border-light">
			
			<div class="card-header border-light bg-body">
				
				<div class="card-title">
					<h4>
						{# Основные настройки раздела  #}
						{{ 'admin.form.header.main'|trans }}
					</h4>
				</div>
			</div>
			
			<div class="card-body text-start pb-0">
				
				<div class="d-flex">
					<div class="w-50 mt-3">
						{# Обложка раздела #}
						{{ include(_self|replace({ "form.main.html.twig": "_cover.html.twig" })) }}
					</div>
					<div class="w-50">
						{# Основные настройки #}
						{{ include(_self|replace({ "form.main.html.twig": "_info.html.twig" })) }}
					</div>
				</div>
			
			</div>
		</div>
		
		
		<div class="card w-100 border-light">
			
			<div class="card-header border-light bg-body">
				<div class="card-title">
					<h4>
						{# Настройки локали  #}
						{{ 'admin.form.header.local'|trans }}
					</h4>
				</div>
			</div>
			
			<div class="card-body text-start pb-0">
				{# Настройки локали  #}
				{{ include(_self|replace({ "form.main.html.twig": "_trans.html.twig" })) }}
				
				{# Символьный код #}
				
				{{ form_row(form.info.url, { label : 'admin.form.label.url'|trans } ) }}
			</div>
		</div>
	</div>
	<div class="d-flex flex-column gap-2 w-50 ">
		<div class="card w-100 border-light">
			
			<div class="card-header border-light bg-body">
				<div class="card-title">
					<h4>
						{# Настройки SEO информации  #}
						{{ 'admin.form.header.seo'|trans }}
					</h4>
				</div>
			</div>
			
			<div class="card-body text-start pb-0">
				{# Настройки SEO информации  #}
				{{ include(_self|replace({ "form.main.html.twig": "_seo.html.twig" })) }}
			</div>
		</div>
	</div>
</div>






